{
  "routes": [
    {
      "route": "/style.css",
      "serve": "/style.css",
      "headers": {
        "content-type": "text/css"
      }
    },
    {
      "route": "/script.js",
      "serve": "/script.js",
      "headers": {
        "content-type": "application/javascript"
      }
    },
    {
      "route": "/api/test",
      "serve": "/api/test",
      "methods": ["GET", "POST"]
    },
    {
      "route": "/api/analyze",
      "serve": "/api/analyze",
      "methods": ["POST"]
    },
    {
      "route": "/*",
      "serve": "/index.html"
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/images/*", "/*.css", "/*.js"]
  },
  "platform": {
    "apiRuntime": "python:3.9"
  },
  "responseOverrides": {
    "404": {
      "rewrite": "/index.html",
      "statusCode": 200
    }
  },
  "globalHeaders": {
    "content-security-policy": "default-src 'self' https://cdnjs.cloudflare.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdnjs.cloudflare.com; font-src 'self' https://fonts.gstatic.com https://cdnjs.cloudflare.com; img-src 'self' data: blob:; script-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com; connect-src 'self';"
  }
}
